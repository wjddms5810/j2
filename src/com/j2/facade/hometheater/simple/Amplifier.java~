package com.j2.facade.hometheater.simple;

public class Amplifier{
  private String description;
  private Tuner tuner;
  private DvdPlayer dvd;
  private int level;
  
  public void Amplifier(String){
    this.description = description;
  }
  public void on(){
    System.cout.println(description+ "on");
  }
  public void off(){
    System.cout.println(description+ "off");
  }
  public void setDvd(DvdPlayer dvd){
    System.out.println(description+ "setting dvd");
    this.dvd = dvd;
  }
  public void setTuner(Tuner tuner){
    System.out.println(description+ "setting tuner");
    this.tuner = tuner;
  }
  public void setVolume(int level){
    System.out.println(description+ "setting level");
    this.level = level;
  }
}